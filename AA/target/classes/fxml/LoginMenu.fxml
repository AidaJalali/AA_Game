<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Sphere?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.controller">
    <children>
        <AnchorPane layoutY="-15.0" prefHeight="450.0" prefWidth="700.0">
            <children>
                <Sphere drawMode="LINE" layoutX="92.0" layoutY="344.0" radius="50" />
                <Text layoutX="134.0" layoutY="106.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Enter your username and password to login" textAlignment="CENTER" wrappingWidth="464.0">
                    <font>
                        <Font name="Modern No. 20" size="24.0" />
                    </font>
                </Text>
                <VBox alignment="CENTER" layoutX="143.0" layoutY="147.0" prefHeight="192.0" prefWidth="422.0" spacing="20">
                    <TextField fx:id="username" maxWidth="300" promptText="username" styleClass="text-input" />
                    <PasswordField fx:id="password" maxWidth="300" promptText="password" styleClass="text-input2" />
                    <HBox alignment="CENTER" spacing="20">
                        <Button text="submit" onMouseClicked="#login" />
                        <Button text="reset" onMouseClicked="#reset" />
                    </HBox>
                </VBox>
                <Button layoutX="565.0" layoutY="359.0" mnemonicParsing="false" onMouseClicked="#backToRegisterMenu" text="Back" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
